<h2 class="heading">CONFIRM</h2>

<div class="contact-form">

  <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <div class="confirm-info">
    <%= f.hidden_field :name %>
    <p class="confirm-name">[NAME]</p>
    <p class="confirm-name-info"><%= @inquiry.name %></p>


    <%= f.hidden_field :email %>
    <p class="confirm-email">[EMAIL]</p>
    <p class="confirm-email-info"><%= @inquiry.email %></p>

    <%= f.hidden_field :message %>
    <p class="confirm-message">[MESSAGE]</p>
    <p class="confirm-message-info"><%= simple_format(@inquiry.message) %></p>

  </div>
    <%= f.submit "SEND", class: "contact-submit" %>
  <% end %>

</div>

