<section class="contact" id="contact">
  <h2 class="heading">CONTACT</h2>
  <div class="contact-form">
    <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
    <!-- <form class="contact-form" action="/inquiry/confirm" method="post"> -->
      <% if @inquiry.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>※入力内容にエラーがあります※</strong>
          <ul>
            <% @inquiry.errors.each do |attr, msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.text_field :name, class: "contact-name", placeholder: "NAME" %>
      <!-- <input type="text" name="name" placeholder="NAME"> -->
      <%= f.text_field :email, class: "contact-email", placeholder: "EMAIL" %>
      <!-- <input type="email" name="email" placeholder="EMAIL"> -->
      <%= f.text_area :message, class: "contact-massage", placeholder: "MESSAGE" %>
      <!-- <textarea name="message" placeholder="MESSAGE"></textarea> -->
      <%= f.submit "SEND", class: "contact-submit" %>
      <!-- <input type="submit" value="SEND"> -->
    <!-- </form> -->
    <% end %>
  </div>
</section>
